<h2>✏️ 投稿を編集</h2>
<form action="/update/<%= @post["id"] %>" method="post">
  <label>タイトル:<br>
    <input type="text" name="title" value="<%= @post["title"] %>" required>
  </label><br><br>

  <label>本文:<br>
    <textarea name="body" rows="6" required><%= @post["body"] %></textarea>
  </label><br><br>

  <button type="submit">更新する</button>
</form>
